{
    "name": "libero/xml-validator",
    "description": "XML validator",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Libero\\XmlValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\Libero\\XmlValidator\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "ext-xsl": "*",
        "gitonomy/gitlib": "^1.0",
        "libero/coding-standard": "^0.3",
        "phpstan/phpstan": "^0.10",
        "phpstan/phpstan-phpunit": "^0.10",
        "phpunit/phpunit": "^7.2",
        "symfony/filesystem": "^4.0"
    },
    "suggest": {
        "ext-xsl": "To use SchematronValidator"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
